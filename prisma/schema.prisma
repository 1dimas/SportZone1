generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


// Desain tabel untuk produk kita
model Product {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  price     Float
  imageUrl  String
  category  String
  description          String?
  rating               Float?
  reviewCount          Int?
  discountPercentage   Int?
  createdAt DateTime @default(now())
}
